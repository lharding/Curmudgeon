    <script type="text/javascript">
	/* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
	var disqus_identifier = '{{outfile}}';

	/* * * DON'T EDIT BELOW THIS LINE * * */
	var load_comments = (function() {
	    var	lclink = document.getElementById("load_comments");
    	    document.getElementById("load_comments").style.display = "none";
	    document.getElementById("dsq_brlink").style.display = "block";

            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
	});
	
	window.onload = function(e) {
	    if(window.location.hash || window.location.hash == "#disqus_thread" || window.location.hash.indexOf("#comment") == 0) {
	        load_comments();
	    }
	};
    </script>
