<div class="post">
<h2 class="post_title">{{title}}</h2>
<div class="post_body">
	{{{body}}}
</div>
<div class="post_meta">
<span class="post_date post_meta_item">{{date}}</span>
{{#frontpage}}
	<a class="post_meta_item" href="{{url_prefix}}{{outfile}}#disqus_thread" data-disqus-identifier="{{outfile}}">Comment</a>
	<a class="permalink post_meta_item" href="{{url_prefix}}{{outfile}}">Permalink</a>
{{/frontpage}}
</div>
</div>
